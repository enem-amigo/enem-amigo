<h1> Fóruns </h1>

<table class="table">
  <thead>
    <th>Nome</th>
    <th>Descrição</th>
  </thead>
  <tbody>
    <% @forums.each do |forum| %>
    <tr>
        <td><%= link_to "#{forum.name}", "/forums/#{forum.id}" %></td>
        <td><%= forum.description %></td>
    </tr>
    <% end %>
    </tbody>
</table>
