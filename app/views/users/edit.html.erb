<h1> Alterar Dados </h1>

<%= render 'form_errors' %>

<%= form_for(@user) do |f| %>
  <%= f.label :nickname, "Nome de Usuário" %>
  <%= f.text_field :nickname, class: 'form-control' %>
  <%= f.label :name, "Nome Completo" %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :email, "E-mail" %>
  <%= f.text_field :email, class: 'form-control' %>
  <%= f.label :password, "Senha" %>
  <%= f.password_field :password, class: 'form-control' %>
  <%= f.label :password_confirmation, "Confirmar senha" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  <div>
    <%= f.label :profile_image, "Foto de Perfil" %>
    <% unless current_user.profile_image_file_name.blank? %>
    <%= link_to 'Remover foto', delete_profile_image_path, class: 'btn btn-danger', id: 'delete-image', data: { confirm: "Você tem certeza que deseja remover a foto?" } %>
  <% end %>
  </div>
  <span class="btn btn-default btn-file">
    Browse<%= f.file_field :profile_image, class: 'form-control' %>
  </span>
  <%= f.submit "Atualizar Dados", class: 'btn btn-primary' %>

<% end %>