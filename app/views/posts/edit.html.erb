<%= form_for @post, url: { action: "update", id: current_user.id, post_id: @post.id } do |f| %>
	<%= f.label :content, "Edite aqui seu post" %>
	<%= f.text_area :content, class: 'form-control' %>
	<%= hidden_field_tag(:post_id, @post.id) %>
	<%= f.submit "Atualizar", class: 'btn btn-success active col-md-2' %>
<% end %>