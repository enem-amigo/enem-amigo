<h1> Batalhas </h1>

<% unless @battles.blank? %>
  <table class='table'>
    <thead>
      <th class="align-center">Status</th>
      <th class="align-center">Jogador 1</th>
      <th class="align-center">Jogador 2</th>
    </thead>

    <% @battles.each do |t| %>
      <tr>
        <% if t.processed %>
          <td class="align-center"><%= link_to 'Finalizada (clique para ver o resultado)', "/battles/#{t.id}/result" %></td>
        <% else %>
          <td class="align-center"><%= 'Pendente' %>
          <% unless player_started?(t) %>
            <%= link_to ' Batalhar', "/battles/#{t.id}", class: "btn btn-success" %>
          <% else %>
            <%= '-Esperando o outro jogador-' %>
          <% end %>
            <%= link_to " Cancelar Batalha", battle_path(t), :method => :delete, class: "btn btn-danger", id: "btn-delete" %>

        <% end %>
        <td class="align-center"><%= t.player_1.name %></td>
        <td class="align-center"><%= t.player_2.name %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h3> Você não participou de nenhuma batalha </h3>
<% end %>