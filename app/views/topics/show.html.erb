<div class="container-fluid">
	<%= render partial: "posts/new", method: new_post %>
</div>

<div class="container-fluid">
	<ul class="list-group">

		<% @topic.posts.each do |t| %>
 			<li class="list-group-item">
				<%= link_to "Editar", edit_post_path, class: "btn btn-primary" %>
				<%= link_to "Excluir", post_path, :method => :delete, class: "btn btn-danger" %>
				<span class="badge">Postado por <%= t.user.name %></span>
 				<p class="text-left"><%= t.content %></p>
			
				<div class="container-fluid">
 						<%= render partial: "comments/new", method: new_comment(t) %>
 				</div>
 
 				<ul class="list-group">
 				<% t.comments.each do |f| %>
 					<li class="list-group-item">
						<%= link_to "Editar", edit_comment_path, class: "btn btn-primary" %>
						<%= link_to "Excluir", comment_path, :method => :delete, class: "btn btn-danger" %>
 						<p class="text-left"><%= f.content %>
						<span class="badge"> Comentado por <%= f.user.name %></span>
				<% end %>		
 				</ul>

 			</li>
 		<% end %>
	</ul>
</div>
