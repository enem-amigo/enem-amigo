<h1>Ranking da Batalha</h1>

<table class="table">
  <thead>
    <th>Posição</th>
    <th>Nome</th>
    <th>Pontos da Batalha</th>
    <th>Batalhas vencidas</th>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @users.each do |user| %>
    <tr>
        <td><%= i = i+1 %>º</td>
        <td><%= link_to user.name, "/users/#{user.id}" %></td>
        <td><%= user.battle_points %></td>
        <td><%= user.wins %></td>
    </tr>
    <% end %>
    </tbody>
</table>
