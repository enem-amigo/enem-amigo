<h1><%= @user.name %></h1>

<% if current_user.is_admin? || current_user.id == @user.id %>
  <%= link_to "Editar", edit_user_path, class: "btn btn-primary" %>
  <%= link_to "Excluir", user_path, :method => :delete,  class: "btn btn-danger" %>
<% end %>

<p>
  <strong>Nome:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Usuário:</strong>
  <%= @user.nickname %>
</p>

<p>
  <strong>E-mail:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Nível:</strong>
  <%= @user.level %>
</p>

<p>
  <strong>Pontos:</strong>
  <%= @user.points %>
</p>

<p>
  <strong>Questões acertadas: <%= @user.total_accepted_questions %></strong>
  <% if @user.total_accepted_questions != 0 %>
  <table>
    <thead>
      <th>Número</th>
      <th>Área</th>
      <th>Ano</th>
    </thead>
    <% @user.accepted_questions.each do |a| %>
      <% accepted = Question.find(a) %>
      <tbody>
        <td><%= link_to "#{accepted.number}", "/questions/#{a}" %></td>
        <td><%= accepted.area %></td>
        <td><%= accepted.year %></td>
      </tbody>
    <% end %>
  </table>
  <% end %>
</p>
