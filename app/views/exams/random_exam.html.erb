Exam <%= @exam.id %>

<%= form_tag "/result", method: :get do %>
  <% for i in 0...4 %>
    <% @exam.questions[i].each do |a| %>
      <%= hidden_field_tag :exam_id , @exam.id %>
      <% if i == 0 %>
        <% q = Question.where(area: "ciências humanas e suas tecnologias") %>
      <% elsif i == 1 %>
        <% q = Question.where(area: "matemática e suas tecnologias") %>
      <% elsif i == 2 %>
        <% q = Question.where(area: "linguagens, códigos e suas tecnologias") %>
      <% elsif i == 3 %>
        <% q = Question.where(area: "ciências da natureza e suas tecnologias") %>
      <% end %>
      <% @question = q[a] %>
      <%= render :partial => 'question' %>
    <% end %>
  <% end %>
  <p><%= submit_tag "Enviar Prova" %></p>
<% end %>
