<p><%= @post.content %></p>

<div class="rate-index">
  <p id="show-vote"><%= pluralize(@post.count_rates,"voto","votos") %></p>
  <%= form_tag rate_post_path, remote: true do %>
    <%= submit_tag "Avaliar", class: 'btn btn-primary btn-sm button', id: 'rate-btn' %>
  <% end %>
</div>

<%= link_to "Excluir", post_path, method: :delete, class: 'btn btn-primary btn-sm button', id: 'destroy-btn' %>